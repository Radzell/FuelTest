<?xml version="1.0" encoding="utf-8"?>

<!-- Generated with http://android-holo-colors.com -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AutoCompleteTextViewFoodieTheme" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/foodietheme_list_selector_holo_light</item>
        <item name="android:background">@drawable/foodietheme_edit_text_holo_light</item>
    </style>

    <style name="ButtonFoodieTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/foodietheme_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonFoodieTheme" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/foodietheme_btn_default_holo_light</item>
    </style>

    <style name="TextButtonFoodieTheme" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/foodie_btn_text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpinnerFoodieTheme" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/foodietheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/foodietheme_list_selector_holo_light</item>
    </style>

    <style name="TabFoodieTheme">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:background">@drawable/foodietheme_tab_indicator_holo</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
    </style>

    <style name="TabTextFoodieTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- v14 <item name="android:textAllCaps">true</item> -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
    </style>

    <style name="ProgressBarFoodieTheme" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/foodietheme_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/foodietheme_progress_indeterminate_horizontal_holo_light
        </item>
    </style>

    <style name="SeekBarFoodieTheme" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">
            @drawable/foodietheme_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/foodietheme_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:thumb">@drawable/foodietheme_scrubber_control_selector_holo_light</item>
    </style>

    <style name="RatingBarFoodieTheme" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">@drawable/foodietheme_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/foodietheme_ratingbar_full_holo_light
        </item>
    </style>

    <style name="RatingBarBigFoodieTheme" parent="android:Widget.Holo.Light.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/foodietheme_ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/foodietheme_ratingbar_holo_light</item>
    </style>

    <style name="RatingBarSmallFoodieTheme" parent="android:Widget.Holo.Light.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/foodietheme_ratingbar_small_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/foodietheme_ratingbar_small_holo_light
        </item>
    </style>

    <style name="ToggleFoodieTheme" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/foodietheme_btn_toggle_holo_light</item>
    </style>

</resources>